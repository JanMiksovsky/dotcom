(items, tag) => page.ori({
  title: tag
  @text: `
    <h1>Tagged '${ tag }'</h1>
    
    <ol reversed class="list-unstyled posts-list">

    ${ map(items, (item,filename) => `
      <li>
      <article class="item-single outline">
        ${ item/@text }
        <small class="timestamp"><a href="${ item/path }">${ date.ori(item/date) }</a></small>
      </article>  
      </li>
    `) }

    </ol>
  `
})