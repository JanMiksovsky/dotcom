(vinyls) => page.ori({
  title: "Vinyl"
  @text: `
    <h1>${ title }</h1>
    <ul>

    ${ @map(vinyls, (vinyl) => `
      <li>
        <a href="${ vinyl/url }"> <img src="/img/vinyl/${ vinyl/cover }" alt="Cover of ${ vinyl/title }" width="100" height="100" loading="lazy" />
          ${ vinyl/title }
        </a><br />
        <span class="artist">${ vinyl/artist }</span><br />
        <span class="date">${ vinyl/year }</span>
      </li>
    `) }

    </ul>
  `
})